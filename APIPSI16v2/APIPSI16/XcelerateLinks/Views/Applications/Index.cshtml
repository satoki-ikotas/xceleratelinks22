@model IEnumerable<Application>
@{
    ViewData["Title"] = "Candidaturas";
}

<h2 class="mb-3">Candidaturas</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning">@ViewBag.Error</div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Nova candidatura</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Oportunidade</th>
            <th>Utilizador</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@(item.Opportunity?.Title ?? item.OpportunityId?.ToString() ?? "-")</td>
            <td>@(item.User?.Name ?? item.UserId?.ToString() ?? "-")</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
