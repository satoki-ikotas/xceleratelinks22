@{
    ViewData["Title"] = "Início";
}

<div class="text-center mb-4">
    <h1 class="display-4">Xcelerate Links</h1>
    <p>Gestão de oportunidades, candidaturas e conversas num só lugar.</p>
</div>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Oportunidades</h5>
                <p class="card-text">Crie e acompanhe oportunidades com dados essenciais.</p>
                <a href="/Opportunities" class="btn btn-primary">Ver oportunidades</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Candidaturas</h5>
                <p class="card-text">Envie candidaturas e acompanhe o progresso.</p>
                <a href="/Applications" class="btn btn-primary">Ver candidaturas</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Empresas</h5>
                <p class="card-text">Consulte empresas e detalhe oportunidades ativas.</p>
                <a href="/Companies" class="btn btn-primary">Ver empresas</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Conversas</h5>
                <p class="card-text">Gerencie conversas com candidatos e empregadores.</p>
                <a href="/Chats" class="btn btn-primary">Ver conversas</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Candidatos</h5>
                <p class="card-text">Filtre candidatos por preferência e nacionalidade.</p>
                <a href="/Users" class="btn btn-primary">Ver candidatos</a>
            </div>
        </div>
    </div>
</div>
