@model IEnumerable<Opportunity>
@{
    ViewData["Title"] = "Oportunidades (Admin)";
}

<h2 class="mb-3">Oportunidades (Admin)</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning">@ViewBag.Error</div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Criar oportunidade</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>TÃ­tulo</th>
            <th>Empresa</th>
            <th>Criador</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@(item.Company?.Name ?? item.CompanyId?.ToString() ?? "-")</td>
            <td>@(item.CreatorId?.ToString() ?? "-")</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detalhes</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
